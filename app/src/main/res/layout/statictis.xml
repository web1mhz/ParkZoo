<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <Button
        android:id="@+id/mapButon"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textColor="#FFFFFF"
        android:background="@color/forestGreen"
        android:drawableStart="@drawable/ic_map_black_24dp"
        android:drawableLeft="@drawable/ic_map_black_24dp"
        android:text="지도보기"
        android:layout_gravity="center"
        android:layout_width="100dp"
        android:layout_height="40dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/forestGreen"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/courseDivide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="설악산"
                android:textColor="#FFFFFF"
                android:textColorHint="#ffffff"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/courseGrade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="3dp"
                android:text="국립공원"
                android:textColor="#FFFFFF"
                android:textColorHint="#ffffff" />

            <TextView
                android:id="@+id/courseTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="3dp"
                android:text="곤충류"
                android:textColor="#FFFFFF"
                android:textColorHint="#ffffff"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:background="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/coursePerssonner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="3dp"
                android:text="생물종수 : 6,000 /20,856"
                android:textColor="#000000"
                android:textColorHint="#000000" />

            <TextView
                android:id="@+id/courseRate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="3dp"
                android:text="분포율: 28.8%"
                android:textColor="@color/colorRed"
                android:textColorHint="#ffffff" />




        </LinearLayout>




    </LinearLayout>

</LinearLayout>