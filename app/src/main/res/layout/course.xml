<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <Button
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:id="@+id/addButton"
        android:textSize="18dp"
        android:textColor="#FFFFFF"
        android:background="@color/forestGreen"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="추가"
        android:layout_width="80dp"
        android:layout_height="40dp" />


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
        android:background="@color/forestGreen"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="#FFFFFF"
            android:padding="3dp"
            android:layout_gravity="center"
            android:id="@+id/courseGrade"
            android:text="1학년"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:padding="3dp"
            android:layout_gravity="center"
            android:id="@+id/courseTitle"
            android:text="강의제목"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

              <LinearLayout
            android:background="#FFFFFF"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="#000000"
                android:padding="3dp"
                android:layout_gravity="center"
                android:id="@+id/courseProfessor"
                android:text="교수님 이름"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"/>

            <TextView

                android:textColor="#000000"
                android:padding="3dp"
                android:layout_gravity="center"
                android:id="@+id/courseCredit"
                android:text="3학점"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView

                android:textColor="#000000"
                android:padding="3dp"
                android:layout_gravity="center"
                android:id="@+id/courseDivide"
                android:text="1분반"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />



        </LinearLayout>

        <LinearLayout
            android:background="#FFFFFF"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="#f92a3f"
                android:padding="3dp"
                android:layout_gravity="center"
                android:id="@+id/coursePersonnel"
                android:text="강의 제한 인원"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"/>

            <TextView

                android:textColor="@color/darkGreen"
                android:padding="3dp"
                android:layout_gravity="center"
                android:id="@+id/courseTime"
                android:text="강의시간대"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />





        </LinearLayout>



    </LinearLayout>


</LinearLayout>